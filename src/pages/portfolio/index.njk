{% extends "base.njk" %}

{% set document    = 'portfolio' %}
{% set category    = '' %}
{% set subcategory = '' %}
{% set segment     = '' %}
{% set subsegment  = '' %}

{% set syntax_highlight = false %}

{% block head %}
  <title>Portfolio</title>
  <meta name="description" content="My works" />
{% endblock %}

{% block aside_top %}{% include aside_top %}{% endblock %}
{# block aside_left %}{% include aside_left %}{% endblock #}
{% block main %}

  <h1>Portfolio</h1>

  <h1>{{ title | capitalize }}</h1>
  <ul class="tile">
    {% for category in portfolio %}
    <li>
      <a href="{{category.link}}" class="link_stretch">{{category.name}}</a>
    </li>
    {% endfor %}
  </ul>

{% endblock %}