{% extends "base.njk" %}

{% set file_name   = 'type_selectors' %}
{% set category    = 'docs' %}
{% set subcategory = 'css' %}
{% set segment     = 'selectors' %}
{% set subsegment  = 'type_selectors' %}

{% block head %}
  <title>Селекторы по типу</title>
  <meta name="description" content="CSS селекторы по типу выбирают элементы по имени узла" />
  <link rel="stylesheet" href="{{prism_css}}">
  <script src="{{prism_js}}" async></script>
  <style>{% include highlight_item %}</style>
  <style>
  {# стили для таблиц с селекторами #}
  {# чтобы не захламлять внешний css #}
  .selectors {
    margin: 20px;
  }

  .selectors > a:hover {
    background: yellow;
  }

  .selectors > table td:first-child {
    background: wheat;
    width: 15px;
  }
  .selectors > table td:nth-child(2) {
    width: 200px;
  }
  </style>
{% endblock %}

{% block aside_top %}{% include aside_top %}{% endblock %}
{% block aside_left %}{% include aside_left %}{% endblock %}
{% block main %}{% include content %}{% endblock %}

{% block inlineScripts %}
  {# место для инлайновых скриптов #}
{% endblock %}