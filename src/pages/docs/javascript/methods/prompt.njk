{% extends "base.njk" %}

{% set file_name   = 'prompt' %}
{% set category    = 'docs' %}
{% set subcategory = 'javascript' %}
{% set segment     = 'methods' %}
{% set subsegment  = 'prompt' %}

{% block head %}
  <title>{{file_name}} method in JavaScript</title>
  <meta name="description" content="Возвращает текст, введенный пользователем." />
  <link rel="stylesheet" href="{{prism_css}}">
  <script src="{{prism_js}}" async></script>
  <style>a[name="{{file_name}}"] {background: {{item_color}}}</style>
{% endblock %}

{% block aside_top %}{% include aside_top %}{% endblock %}
{% block aside_left %}{% include aside_left %}{% endblock %}

{% block main %}
  <section class="content">
    <h1>Метод <em>{{file_name}}()</em></h1>
    <p>Отображает предупреждающее диалоговое окно.</p>
    {% set example_id = 'prompt_method' %}
    {% set numeration = true %}
    {% set split      = false %}
    {% set html       = false %}
    {% set njk        = false %}
    {% set css        = false %}
    {% set js         = true %}
    {% set demo       = false %}
    {% include codeExample %}
  </section>
{% endblock %}

{% block inlineScripts %}
  {# место для инлайновых скриптов #}
{% endblock %}