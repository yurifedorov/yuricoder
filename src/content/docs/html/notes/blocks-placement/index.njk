{% extends "base.njk" %}

{# variables #}
{% set title           = 'расположение блоков' %}
{% set category        = 'docs' %}
{% set subcategory     = 'html' %}
{% set segment         = 'notes' %}
{% set subsegment_del  = 'delete' %}

{# путь к примерам code-example-beta [НЕ УДАЛЯТЬ] #}
