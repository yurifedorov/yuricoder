<ul class="breadcrumbs">
  {# show always #}    <li>         <a href="/">home</a>
  {% if category    %} <li>         <a href="../">{{ category }}</a>     {% endif %}
  {% if subcategory %} <li>         <a href="../">{{ subcategory }}</a>  {% endif %}
  {% if segment     %} <li hidden>  <a href="../">{{ segment }}</a>      {% endif %}
  {% if subsegment  %} <li>         <a href="../">{{ subsegment }}</a>   {% endif %}
  {# show always #}    <li>         <span>{{ document }}</span>
</ul>